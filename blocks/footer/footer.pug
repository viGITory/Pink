div.page__footer
  footer.main-footer
    div.container
      div.main-footer__inner
        div.main-footer__logo
          div.main-footer__logo-tablet
            a.footer-logo-tablet.logo.logo--footer(href='#')
              svg(width='148' height='40')
                use(xmlns:xlink='http://www.w3.org/1999/xlink' xlink:href='#logo-pink-blue-mobile')
          div.main-footer__logo-desktop
            a.footer-logo-desktop.logo.logo--footer(href='#')
              svg(width='148' height='40')
                use(xmlns:xlink='http://www.w3.org/1999/xlink' xlink:href='#logo-pink-blue-desktop')
        div.main-footer__social
          ul.social
            li.social__item
              a.social__icon(href='https://twitter.com')
                svg(width='18' height='15')
                  use(xmlns:xlink='http://www.w3.org/1999/xlink' xlink:href='#icon-twitter')
            li.social__item
              a.social__icon(href='https://facebook.com')
                svg(width='9' height='19')
                  use(xmlns:xlink='http://www.w3.org/1999/xlink' xlink:href='#icon-facebook')
            li.social__item
              a.social__icon(href='https://www.youtube.com')
                svg(width='15' height='14')
                  use(xmlns:xlink='http://www.w3.org/1999/xlink' xlink:href='#icon-youtube')
        div.main-footer__copyright
          a.copyright(href='https://htmlacademy.ru')
            span.copyright__text Разработано
            svg.copyright__icon(width='42' height='49')
              use(xmlns:xlink='http://www.w3.org/1999/xlink' xlink:href='#logo-htmlacademy')
